<div class="container">
    <div class="row">
        <div class="burgerContainer col-12">
            <p class="title">Eat-Da-Burger!</p>
            <img class="burgerImage" src="https://images-na.ssl-images-amazon.com/images/I/71tyeXeFPsL._SX679_.jpg">

            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input id="newburger" type="text" id="ca" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>

        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="burgerQueue col-5">
            <p>Burgers Ready To Eat!</p>
            <br>
            <div class="row">
            <div class="col-12">
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <span>{{this.burger_name}}</span>
                <button type="button" class="devour" data-id="{{this.id}}"></span>Devour!</button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
            </div>
            </div>
        </div>
        <div class="burgerDevoured col-5">
            <p>Burgers Devoured</p>
            <br>
            <ul>
                {{#each burger}}
                {{#if devoured}}
                <span>{{this.burger_name}}</span>
                <button type="button" class="delete" data-id="{{this.id}}"><span></span>Delete!</button>
                <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>